# Database
DATABASE_URL=sqlite+aiosqlite:///./fileshare.db

# Cloudflare R2 Storage (REQUIRED)
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_ACCESS_KEY_ID=your_r2_access_key_id
CLOUDFLARE_SECRET_ACCESS_KEY=your_r2_secret_access_key
CLOUDFLARE_R2_BUCKET_NAME=your_bucket_name

# Security (REQUIRED)
SECRET_KEY=your_super_secret_key_change_this_in_production

# Email Service (Optional)
SENDGRID_API_KEY=

# Stripe Payment Processing (REQUIRED)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PRO_PRICE_ID=price_your_pro_plan_price_id
STRIPE_MAX_PRICE_ID=price_your_max_plan_price_id
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Sentry Error Tracking (Optional)
SENTRY_DSN=
APP_VERSION=1.0.0

# File Encryption (REQUIRED - generate a secure random key)
ENCRYPTION_MASTER_KEY=your_32_char_encryption_key_change_this

# Virus Scanning (Optional)
VIRUS_SCAN_ENABLED=false
VIRUS_SCAN_SERVICE=disabled
VIRUS_SCAN_API_URL=
VIRUS_SCAN_API_KEY=
VIRUS_SCAN_TIMEOUT=30

# CORS Configuration (REQUIRED - your production domain)
CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# Environment (REQUIRED)
DEBUG=false
ENVIRONMENT=production
FRONTEND_URL=https://yourdomain.com

# Optional Redis for rate limiting (defaults to in-memory if not set)
REDIS_URL=